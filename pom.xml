<!--                    <include>**/fire_explode/*.png</include>-->
<!--                    <include>**/flash_explode/*.png</include>-->
<!--                    <include>**/soil_explode/*.png</include>-->
<!--                    <include>**/water_explode/*.png</include>-->
<!--                </includes>-->
<!--                <filtering>true</filtering>-->
<!--            </resource>-->
        </resources>
    </build>


</project>